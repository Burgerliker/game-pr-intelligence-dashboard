NAVER_CLIENT_ID=your_client_id_here
NAVER_CLIENT_SECRET=your_client_secret_here

# DB paths
LIVE_DB_PATH=backend/data/articles.db
BACKTEST_DB_PATH=backend/data/articles_backtest.db

# Runtime safety defaults
APP_ENV=dev
ENABLE_DEBUG_ENDPOINTS=0
ENABLE_MANUAL_COLLECTION=0
DISABLE_COMPETITOR_COMPARE=1
SCHEDULER_LOG_TTL_DAYS=7
TEST_ARTICLE_TTL_HOURS=24
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001
CORS_ALLOW_CREDENTIALS=1
COMPARE_LIVE_RATE_LIMIT_PER_MIN=30
COMPARE_LIVE_CACHE_TTL_SECONDS=45

# Live collect / scheduler tuning
LIVE_COLLECT_INTERVAL_SECONDS=600
LIVE_COLLECT_DISPLAY=100
LIVE_COLLECT_PAGES=3
LIVE_COLLECT_QUERIES_PER_IP=2
LIVE_COLLECT_INCLUDE_SIM=1
COLLECT_ZERO_STREAK_WARN_THRESHOLD=10
ENABLE_COMPETITOR_AUTO_COLLECT=1
COMPETITOR_COLLECT_INTERVAL_SECONDS=3600
COMPETITOR_COLLECT_ARTICLES=30
COMPETITOR_AUTO_COMPANIES=넥슨,NC소프트,넷마블,크래프톤
BACKFILL_INTERVAL_SECONDS=1800
BACKFILL_LOW_COUNT_THRESHOLD=8
BACKFILL_MAX_IPS_PER_RUN=2
BACKFILL_DISPLAY=40

# Frontend base URL (choose by mode)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_SHOW_BACKTEST=false
NEXT_PUBLIC_COMPARE_REFRESH_MS=60000

# Optional / legacy keys (drift suppression)
PR_DB_PATH=
DEBUG_BACKTEST=0
DEBUG_BACKTEST_TIMESTAMPS=0
NEXT_PUBLIC_API_BASE=
NEXT_PUBLIC_USE_MOCK_FALLBACK=0
NODE_ENV=production
